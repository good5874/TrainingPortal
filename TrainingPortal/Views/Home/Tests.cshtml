@model TestViewModel

@{
    ViewData["Title"] = "Tests";
}

<h1>Название курса: @Model.NameCourse</h1>
<h4>Тест: @Model.NameTest </h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            @foreach (Question question in Model.Questions)
            {
            <div class="form-group">
                <label class="control-label">@question.QuestionText</label>
                <input id="results" name="results" class="form-control" />
            </div>
            }
        <div class="form-group">
            <input asp-for="TestId" type="hidden" />
            <input type="submit" asp-action="Result" value="Отправить результат" class="btn btn-primary" />
        </div>
        </form>
    </div>
</div>
